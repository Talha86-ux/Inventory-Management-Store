<%if current_user.role== "Manager" %>
  <h2 class="heading">Add a new Product</h2>

  <%= render "devise/shared/error_messages", resource: @product %>
  <%= form_for  @product, url: company_products_path do |f| %>
    <div class="form_style">
      <div class="col-10" style="margin: 0 auto">
        <div class="field mb-3">
          <%= f.label :title %><br/>
          <%= f.text_field :title, class:"form-control", required:true %>
        </div>
        <div class="field mb-3">
          <%= f.label :description %><br/>
          <%= f.text_field :description, class:"form-control", required:true %>
        </div>
        <div class="field mb-3">
          <%= f.label :supplied_by %><br/>

          <%= f.collection_select :supplied_by, Supplier.all, :id, :name, prompt: true, required:true %>
        </div>
        <div class="field mb-3">
          <%= f.label :quantity, class:"form_text" %><br/>
          <%= f.number_field :quantity, min:'0', class:"form-control", required:true %>
        </div>

        <div class="field mb-3">
          <%#s = Supplier.find_by(@supplier) %>
          <%#= f.number_field :supplier_id, value: s.id, class:"form-control", type:"Hidden"%>
        </div>
        <div class="actions" style="margin-bottom: 10px">
          <%= f.submit "Create", class:"btn btn-info" %>
        </div>
      </div>
    </div>
  <%end %>
<%end %>