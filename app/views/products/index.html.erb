<%if current_user.role=="Manager" %>


  <h1 class="heading">Products</h1>
  <table class="table table-striped table-hover space">
    <thead class="thead-light">
    <th>Title</th>
    <th>Description</th>

    <th>Stock</th>
    <th>Supplier</th>
    <th></th>
    <th></th>
    </thead>
    <tbody>
    <%@products.each do |p| %>
      <tr>
        <td><%=p.title %></td>
        <td><%=p.description %></td>
        <td><%=p.quantity %></td>
        <%supplier= Supplier.find_by(id: p.supplied_by) %>
        <td><%=supplier.name%></td>
        <%c = Company.where(assign_manager: current_user.id).first %>
        <td><%= link_to 'Edit', "/companies/#{c.id}/products/#{p.id}/edit" %></td>
        <td><%= link_to 'delete',
                        { controller: "products", action: "destroy", id: p.id },
                        data: { confirm: 'Are you sure?' },
                        method: :delete, class:"icon_color" %>
        </td>
    <%end %>
    </tr>
    </tbody>
  </table>
  <%= link_to 'New Product', new_company_product_path%>

<%end %>