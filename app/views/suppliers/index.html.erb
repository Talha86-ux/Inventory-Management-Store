<p id="notice"><%= notice %></p>

<h1 class="heading">Suppliers</h1>
<%#c = Supplier.find_by(company_id) %>
<!--<h5><%#=c %></h5>-->
<table class="table table-striped table-hover space">
  <thead class="thead-light">
    <tr>
      <th>Name</th>
      <th>Cnic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.cnic %></td>
        <%c = Company.where(assign_manager: current_user.id).first %>
        <td><%= link_to 'Edit', "/companies/#{c.id}/suppliers/#{supplier.id}/edit" %></td>
        <td><%= link_to 'Destroy', "/companies/#{c.id}/suppliers/#{supplier.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

