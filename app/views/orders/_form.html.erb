  <%#= render 'line_item_fields', f: line_items %>
      <div class='links'>
        <%= link_to_add_association 'add task', f, :line_items %>
      </div>

  <%= f.actions do  %>
  <%= f.action :submit  %>

  <div id='tasks'></div>
      <%end %>
    <%end %>
<% end %>