
  <%= semantic_form_for @order do |f| %>
  <%= f.inputs do %>
  <%= f.collection_select :customer_list, Customer.all, :id, :name, prompt:true %>
  <%= f.input :invoice_no %>
  <%= f.input :invoice_date %>
  <%= f.input :tax %>
    <%end %>

